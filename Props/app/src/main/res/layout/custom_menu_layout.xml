<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="550dp"
    android:background="@drawable/menu_background"
    android:orientation="vertical"
    android:backgroundTint="#09CAC7"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/salir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="180dp"
        android:background="@drawable/button_mas"
        android:backgroundTint="#09CAC7"
        android:contentDescription="Botón con imagen"
        android:scaleType="centerInside"
        android:src="@drawable/cross"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circuas_avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rutina_curves"
        android:backgroundTint="#02686F"
        android:layout_marginTop="5dp"
        android:text="Tomás Mella"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/notiImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:src="@drawable/noti"/>

        <TextView
            android:id="@+id/option1"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="51dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Notificaciones"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/medicalImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/medical" />

        <TextView
            android:id="@+id/option2"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="51dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Medico"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/infoImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/info" />

        <TextView
            android:id="@+id/option3"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="51dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Informacion"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <Button
        android:id="@+id/cerrarSesion"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="75dp"
        android:backgroundTint="#F1BF8E"
        android:textStyle="bold"
        android:text="Cerrar Sesión"
        android:textSize="16sp" />

</LinearLayout>
