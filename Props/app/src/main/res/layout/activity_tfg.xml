<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4E8F3"
    tools:context=".TfgActivity">

    <RelativeLayout
        android:id="@+id/menuButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="640dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@drawable/rutina_curves"
            android:backgroundTint="#39333D"
            android:padding="5dp"/>
        <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rutina_curves"
            android:backgroundTint="#39333D"
            android:padding="5dp"/>
        <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rutina_curves"
            android:backgroundTint="#39333D"
            android:padding="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="580dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rutina_curves"
        android:backgroundTint="#F96501"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Ecuación CKD-EPI para la tasa de filtración glomerular (TFG)"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/rutina_curves"
            android:backgroundTint="#D9D9D9">

            <TextView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Creatinina CKD-EPI 2021"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="260dp"
            android:text="Genero"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/masculino"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="635dp"
            android:background="@drawable/tfg_genero"

            android:contentDescription="Botón con imagen"
            android:padding="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/masculino"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/femenino"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="392dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="655dp"
            android:background="@drawable/tfg_genero2"

            android:contentDescription="Botón con imagen"
            android:padding="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/femenino"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="260dp"
            android:text="Creatinina sérica (mg/dl)"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/creatinina"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/rutina_curves"
            android:backgroundTint="#FFFFFF"
            android:hint="Norma: 0,7 - 1,3"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="390dp"
            android:text="Edad"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edad_creatanina"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="418dp"
            android:background="@drawable/rutina_curves"
            android:backgroundTint="#FFFFFF"
            android:hint="18"
            android:padding="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calcular"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="480dp"
            android:backgroundTint="#2D2D2D"
            android:text="Calcular"
            android:textSize="25sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>